<h1>Burger Devourer!</h1>

<section class="jawn1">
<h2>Undevoured Burgers</h2>
<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger-block devoured=false}}
    {{/unless}}
  {{/each}}
</ul>
</section>

<section class="jawn">
<h2>Add a Burger</h2>
<form class="create-form">
  <div class="form-group">
    <label for="burg">Burger Name:</label>
    <input type="text" id="burg" name="name">
  </div>
  <div class="form-group">
    <label for="devoured">Eaten?:</label><br>
    <input type="radio" name="devoured" value="1" checked> Devoured!<br>
    <input type="radio" name="devoured" value="0"> Uneaten
  </div>
  <button type="submit">Add Burger</button>
</form>
</section>

<section class="jawn2">
<h2>Devoured Burgers</h2>
<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burger-block devoured=true}}
    {{/if}}
  {{/each}}
</ul>
</section>


