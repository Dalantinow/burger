<h1>Burger Devourer!</h1>

<section class="jawn1">
<h2>Undevoured Burgers</h2>
<ul>
  {{#each burgers}}
    {{#unless devoured}}
    <li>{{burger_name}}
      <button class="change-eaten" data-id="{{id}}" data-neweaten="{{devoured}}">
        Eat it
        </button>
      </li>
    
    {{/unless}}
  {{/each}}
</ul>
</section>

<section class="jawn">
<h2>Add a Burger</h2>
<form class="create-form">
  <div class="form-group">
    <label for="burg">Burger Name:</label>
    <input type="text" id="burg" name="name">
  </div>
 
  <button type="submit">Add Burger</button>
</form>
</section>

<section class="jawn2">
<h2>Devoured Burgers</h2>
<ul>
  {{#each burgers}}
    {{#if devoured}}
    <li>{{burger_name}}</li>
    
    {{/if}}
  {{/each}}
</ul>
</section>


